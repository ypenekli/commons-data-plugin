<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<GridPane xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.yp.core.data.plugin.views.Connect" hgap="5" vgap="5"  prefWidth="700">
	<TabPane GridPane.columnIndex="0" GridPane.rowIndex="0">
	 <Tab text="%Connect.Tab1.Header" closable="false" >
		<GridPane   hgap="5" vgap="5" >
			<Label 	GridPane.columnIndex="0" GridPane.rowIndex="0"  GridPane.columnSpan="4"  text="%Connect.Header" >
				<font><Font  name="System Bold" size="18.0" /></font>
			</Label>
	      	<padding>
				<Insets  bottom="10" left="2" right="2" top="25" />
			</padding>	
			
			<Label 		GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="right"  text="%Connect.Profile" style="-fx-font-weight: bold;"/>			
			<Label 		GridPane.columnIndex="1" GridPane.rowIndex="1" text="%colon" />
			<ComboBox   GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="cmbConnProfile" prefWidth="300" onAction="#onConnProfileChanged"/>
			
			<Label 		GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.halignment="right"  text="%Connect.User.Name" style="-fx-font-weight: bold;"/>			
			<Label 		GridPane.columnIndex="1" GridPane.rowIndex="2" text="%colon" />
			<TextField  GridPane.columnIndex="2" GridPane.rowIndex="2" fx:id="txtUserName" prefWidth="300" />
			
			<Label 		GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.halignment="right"  text="%Connect.User.Passw" style="-fx-font-weight: bold;"/>			
			<Label 		GridPane.columnIndex="1" GridPane.rowIndex="3" text="%colon" />
			<TextField  GridPane.columnIndex="2" GridPane.rowIndex="3" fx:id="txtUserPassw" prefWidth="300" />	
			
			<Button     GridPane.columnIndex="2" GridPane.rowIndex="4"  text="%Connect.Connect" onAction="#onConnectDb"/>	
			
			<Label 		GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.halignment="right"  text="%Connect.Schema.Name" style="-fx-font-weight: bold;"/>			
			<Label 		GridPane.columnIndex="1" GridPane.rowIndex="5" text="%colon" />
			<ComboBox   GridPane.columnIndex="2" GridPane.rowIndex="5" fx:id="cmbSchemas" prefWidth="300" onAction="#onSchemasChanged"/>	
			
			<Label 		GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.halignment="right"  text="%Connect.Table.Name" style="-fx-font-weight: bold;"/>			
			<Label 		GridPane.columnIndex="1" GridPane.rowIndex="6" text="%colon" />
			<ComboBox   GridPane.columnIndex="2" GridPane.rowIndex="6" fx:id="cmbTables" prefWidth="300" onAction="#onTablesChanged"/>
			
			<Label 		GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.halignment="right"  text="%Connect.Dataentity.Package" style="-fx-font-weight: bold;"/>			
			<Label 		GridPane.columnIndex="1" GridPane.rowIndex="7" text="%colon" />
			<TextField  GridPane.columnIndex="2" GridPane.rowIndex="7" fx:id="txtPackageName" prefWidth="300" />	
		</GridPane>
	 </Tab>
	 <Tab text="%Connect.Tab2.Header">
		<VBox fillWidth="true">
			<TextArea  fx:id="txtQuery" VBox.vgrow="ALWAYS" >
				<padding>
					<Insets bottom="20.0" right="10.0" />
				</padding>
			</TextArea>
		</VBox>
	 </Tab>
	</TabPane>
	<Button  GridPane.columnIndex="0" GridPane.rowIndex="1" text="%Connect.Dataentity.Generate" onAction="#onGenerateDataEntity"/>
</GridPane>

